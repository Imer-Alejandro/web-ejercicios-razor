@page "/ejercicio/2"

<h3>Ejercicio 2</h3>

<p>Ingresa un número para contar la cantidad de dígitos pares:</p>

<input @bind="numero" type="number" class="form-control mb-3" />

<button class="btn btn-primary" @onclick="MostrarCantidadDigitosPares">Calcular</button>

@if (resultado != null)
{
    <p>La cantidad de dígitos pares es: <strong>@resultado</strong></p>
}

@code {
    private int numero;
    private int? resultado;

    // Función para contar la cantidad de dígitos pares
    private int ContarDigitosPares(int numero)
    {
        int contador = 0;
        foreach (char digito in Math.Abs(numero).ToString())
        {
            if (int.TryParse(digito.ToString(), out int digitoNumerico) && digitoNumerico % 2 == 0)
            {
                contador++;
            }
        }
        return contador;
    }

    // Función para mostrar el resultado en la vista
    private void MostrarCantidadDigitosPares()
    {
        resultado = ContarDigitosPares(numero);
    }
}